1. PRINT NUMBER FOR 1 TO N

void printNumbers(int n) {
    if (n == 0) return;
    printNumbers(n - 1);
    printf("%d ", n);
}
====================================================================================================

2. SUM OF FIRST N NATURAL NUMBER

int sum(int n) {
    if (n == 0) return 0;
    return n + sum(n - 1);
}
===================================================================================================

3. FACTORIAL OF A NUMBER

int factorial(int n) {
    if (n <= 1) return 1;
    return n * factorial(n - 1);
}
===================================================================================================

4. REVERSE PRINT FROM N TO 1

void reversePrint(int n) {
    if (n == 0) return;
    printf("%d ", n);
    reversePrint(n - 1);
}
=================================================================================================
5. FIBONACCI SERIES

int fibonacci(int n) {
    if (n == 0) return 0;
    if (n == 1) return 1;
    return fibonacci(n - 1) + fibonacci(n - 2);
}
=================================================================================================

6. PRINT ARRAY ELEMENTS RECURSIVELY

void printArray(int arr[], int index, int size) {
    if (index == size) return;
    printf("%d ", arr[index]);
    printArray(arr, index + 1, size);
}
==================================================================================================

7. FIND MAXIMUM IN ARRAY RECURSIVELY

int findMax(int arr[], int index, int size) {
    if (index == size - 1) return arr[index];
    int maxRest = findMax(arr, index + 1, size);
    return (arr[index] > maxRest) ? arr[index] : maxRest;
}
==================================================================================================

8. SUM OF DIGITS OF A NUMBER

int sumDigits(int n) {
    if (n == 0) return 0;
    return (n % 10) + sumDigits(n / 10);
}
