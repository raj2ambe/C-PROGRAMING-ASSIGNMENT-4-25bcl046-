
#include <stdio.h>

#define SIZE 3

void inputMatrix(int mat[SIZE][SIZE], const char *name) {
    printf("Enter elements of %s matrix (%dx%d):\n", name, SIZE, SIZE);
    for (int i = 0; i < SIZE; i++)
        for (int j = 0; j < SIZE; j++) {
            printf("%s[%d][%d]: ", name, i, j);
            scanf("%d", &mat[i][j]);
        }
}

void printMatrix(int mat[SIZE][SIZE], const char *label) {
    printf("\n%s:\n", label);
    for (int i = 0; i < SIZE; i++) {
        for (int j = 0; j < SIZE; j++)
            printf("%4d", mat[i][j]);
        printf("\n");
    }
}

void addMatrices(int A[SIZE][SIZE], int B[SIZE][SIZE], int result[SIZE][SIZE]) {
    for (int i = 0; i < SIZE; i++)
        for (int j = 0; j < SIZE; j++)
            result[i][j] = A[i][j] + B[i][j];
}

void subtractMatrices(int A[SIZE][SIZE], int B[SIZE][SIZE], int result[SIZE][SIZE]) {
    for (int i = 0; i < SIZE; i++)
        for (int j = 0; j < SIZE; j++)
            result[i][j] = A[i][j] - B[i][j];
}

void multiplyMatrices(int A[SIZE][SIZE], int B[SIZE][SIZE], int result[SIZE][SIZE]) {
    for (int i = 0; i < SIZE; i++)
        for (int j = 0; j < SIZE; j++) {
            result[i][j] = 0;
            for (int k = 0; k < SIZE; k++)
                result[i][j] += A[i][k] * B[k][j];
        }
}

int main() {
    int A[SIZE][SIZE], B[SIZE][SIZE];
    int sum[SIZE][SIZE], diff[SIZE][SIZE], prod[SIZE][SIZE];

    inputMatrix(A, "A");
    inputMatrix(B, "B");

    addMatrices(A, B, sum);
    subtractMatrices(A, B, diff);
    multiplyMatrices(A, B, prod);

    printMatrix(A, "Matrix A");
    printMatrix(B, "Matrix B");
    printMatrix(sum, "A + B");
    printMatrix(diff, "A - B");
    printMatrix(prod, "A * B");

    return 0;
}
