// Assignment by Raj Patel
#include <stdio.h>

int main() {
    int matrix[4][4] = {
        {16, 2, 3, 13},
        {5, 11, 10, 8},
        {9, 7, 6, 12},
        {4, 14, 15, 1}
    };
    int array[16], i, j, k;

    // Step 1: Copy matrix elements to array
    k = 0;
    for (i = 0; i < 4; i++)
        for (j = 0; j < 4; j++)
            array[k++] = matrix[i][j];

    // Step 2: Sort the array using Bubble Sort
    for (i = 0; i < 15; i++) {
        for (j = 0; j < 15 - i; j++) {
            if (array[j] > array[j + 1]) {
                int temp = array[j];
                array[j] = array[j + 1];
                array[j + 1] = temp;
            }
        }
    }

    // Step 3: Print the sorted array
    printf("Sorted 1D array:\n");
    for (i = 0; i < 16; i++)
        printf("%d ", array[i]);

    return 0;
}
