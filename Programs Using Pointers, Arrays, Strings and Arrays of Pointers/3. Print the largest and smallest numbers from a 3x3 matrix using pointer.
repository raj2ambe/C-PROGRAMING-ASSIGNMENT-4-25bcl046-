// Assignment by Raj Patel
#include <stdio.h>

int main() {
    int matrix[3][3] = {
        {12, 7, 9},
        {4, 15, 6},
        {10, 2, 8}
    };

    int *ptr = &matrix[0][0];
    int max = *ptr;
    int min = *ptr;

    for (int i = 0; i < 9; i++) {
        if (*(ptr + i) > max)
            max = *(ptr + i);
        if (*(ptr + i) < min)
            min = *(ptr + i);
    }

    printf("Largest element: %d\n", max);
    printf("Smallest element: %d\n", min);

    return 0;
}
